{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": ["error", "windows"],
        "semi": ["error", "never"],
        "import/no-unresolved": [2, { "ignore": ["body-parser"]}],
        "no-underscore-dangle": ["error", { "allow": ["_id", "__v"] }],
        "no-param-reassign": "off"
    }
}